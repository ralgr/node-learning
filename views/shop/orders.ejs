<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if (orderProducts.length > 0) { %>   
            <ul>
                <% orderProducts.forEach(order => { %>
                    <li>
                        <h1><%= order.id %> </h1>
                        <ul>
                            <% order.products.forEach(item => { %>
                                <li>
                                    <p><%= item.title %> (<%= item.orderItem.qty %>)</p>
                                </li> 
                            <% }) %>
                        </ul>
                    </li> 
                <% }) %>
            </ul>
        <% } else { %>
            <h1>No Products Ordered!</h1>
        <% } %>
    </main>

<%- include('../includes/end.ejs') %>